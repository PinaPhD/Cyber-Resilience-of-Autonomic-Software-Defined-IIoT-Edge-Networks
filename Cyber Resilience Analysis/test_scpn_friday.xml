<?xml version="1.0" encoding="UTF-8"?>
<net gridActive="true" id="0" netclass="SCPN" sharpEdges="false"
  xmlns="http://timenet.tu-ilmenau.de/schema/SCPN"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://timenet.tu-ilmenau.de/schema/SCPN etc/schemas/SCPN.xsd">

  <!-- ✅ Token Type Definition -->
  <types>
    <recordtypes>
      <recordtype name="ThreatToken">
        <field name="cvss" type="real"/>
      </recordtype>
    </recordtypes>
  </types>

  <!-- ✅ Normal Place -->
  <place capacity="0" id="0.0" queue="Random" tokentype="int"
    type="node" watch="false">
    <graphics orientation="0" x="100" y="100"/>
    <label id="0.0.0" text="P0" type="text">
      <graphics x="-10" y="-20"/>
    </label>
  </place>

  <!-- ✅ Colored Token Place -->
  <place capacity="0" id="0.1" initialMarking="{cvss = 3.5}" queue="Random"
    tokentype="ThreatToken" type="node" watch="false">
    <graphics orientation="0" x="300" y="100"/>
    <label id="0.1.0" text="P5" type="text">
      <graphics x="-10" y="-20"/>
    </label>
  </place>

  <!-- ✅ Immediate Transition -->
  <immediateTransition id="0.2" priority="1"
    serverType="ExclusiveServer" specType="Automatic" takeFirst="false"
    type="node" watch="false" weight="1.0">
    <graphics orientation="0" x="200" y="100"/>
    <label id="0.2.0" text="T0" type="text">
      <graphics x="-10" y="-20"/>
    </label>
  </immediateTransition>

  <!-- ✅ Arcs -->
  <arc fromNode="0.0" id="0.3" toNode="0.2" type="connector">
    <inscription id="0.3.0" text="1" type="inscriptionText">
      <graphics x="0" y="0"/>
    </inscription>
  </arc>
  <arc fromNode="0.2" id="0.4" toNode="0.1" type="connector">
    <inscription id="0.4.0" text="{cvss = 3.5}" type="inscriptionText">
      <graphics x="0" y="0"/>
    </inscription>
  </arc>
</net>
